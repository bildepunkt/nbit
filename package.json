{
  "name": "nbit",
  "version": "0.0.1",
  "description": " A Javascript library for making retro-looking, (n)bit style games on the canvas!",
  "keywords": [
    "canvas",
    "game",
    "retro"
  ],
  "main": "index.js",
  "scripts": {
    "build": "./node_modules/.bin/babel src --out-dir dist && cp -r ./dist/ ./pages/nbit/",
    "watch": "./node_modules/.bin/babel src --watch --out-dir dist",
    "test": "./node_modules/.bin/jasmine",
    "clean": "rm -rf ./dist/ && mkdir ./dist/ && rm -rf ./pages/nbit/ && mkdir ./pages/nbit/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/c-concat-p/nbit.git"
  },
  "bugs": {
    "url": "https://github.com/c-concat-p/nbit/issues"
  },
  "author": "Chris Peters",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "6.3.17",
    "babel-preset-es2015": "6.3.13",
    "jasmine": "2.4.1"
  }
}
